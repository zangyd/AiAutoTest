# 基础配置
ENV=development

# API测试配置
TEST_API_HOST=localhost
TEST_API_PORT=8000
TEST_API_PROTOCOL=http
TEST_API_VERSION=v1
TEST_API_TIMEOUT=30
TEST_API_MAX_RETRIES=3

# 认证测试配置
## 测试用户配置
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin_password
TEST_USER_USERNAME=test_user
TEST_USER_PASSWORD=test_password
TEST_USER_EMAIL=test@example.com

## JWT配置
TEST_JWT_SECRET=test_secret_key
TEST_JWT_ALGORITHM=HS256
TEST_ACCESS_TOKEN_EXPIRE_MINUTES=30
TEST_REFRESH_TOKEN_EXPIRE_DAYS=7

## 认证安全配置
TEST_MAX_LOGIN_ATTEMPTS=5
TEST_ACCOUNT_LOCKOUT_MINUTES=30
TEST_PASSWORD_MIN_LENGTH=8
TEST_PASSWORD_REQUIRE_SPECIAL=true
TEST_PASSWORD_REQUIRE_NUMBER=true
TEST_PASSWORD_REQUIRE_UPPERCASE=true
TEST_PASSWORD_REQUIRE_LOWERCASE=true

## 验证码配置
TEST_CAPTCHA_ENABLED=true
TEST_CAPTCHA_LENGTH=6
TEST_CAPTCHA_EXPIRE_MINUTES=5

# 数据库测试配置
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=test_db
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# Redis测试配置
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379
TEST_REDIS_DB=1
TEST_REDIS_PASSWORD=test_password

# 日志配置
TEST_LOG_LEVEL=DEBUG
TEST_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
TEST_LOG_FILE=tests.log

# 测试报告配置
TEST_REPORT_DIR=reports
TEST_REPORT_FORMAT=html
TEST_COVERAGE_MINIMUM=90
TEST_COVERAGE_FAIL_UNDER=85

# 性能测试配置
TEST_PERFORMANCE_CONCURRENT_USERS=10
TEST_PERFORMANCE_DURATION_SECONDS=60
TEST_PERFORMANCE_RAMP_UP_SECONDS=30
TEST_PERFORMANCE_REQUESTS_PER_SECOND=50

# 安全测试配置
TEST_SECURITY_SCAN_ENABLED=true
TEST_SECURITY_SCAN_LEVEL=high
TEST_SECURITY_FAIL_ON_VULNERABILITIES=true

# 测试环境标记
TEST_ENVIRONMENT=testing
TEST_SKIP_CLEANUP=false
TEST_PARALLEL_WORKERS=4 